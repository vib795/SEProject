.row.drop_img
  .col-lg-1
  .col-lg-10
    %a{"data-target" => "#wiresharkModel", "data-toggle" => "modal", :type => "button"}
      = image_tag "wireshark.png", alt: "Wireshark Icon"
  .col-lg-1
  

#wiresharkModel.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "wiresharkModalCenterTitle", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-dialog-centered{:role => "document"}
    .modal-content
      .modal-header
        %h5#wiresharkModalCenterTitle.modal-title Choose An Interface
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
      .modal-body
        = link_to 'eth0', interfaces_ethernet_path, remote: true, class: 'btn btn-warning btn-lg'
        = link_to 'wlan0', interfaces_wireless_path, class: 'btn btn-info btn-lg'
        = link_to 'localhost', interfaces_localhost_path, class: 'btn btn-success btn-lg'
